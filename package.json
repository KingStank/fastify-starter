{
  "name": "fastify-starter",
  "version": "1.0.0",
  "description": "A starter for Fastify with Twig, Alpine, and Tailwind.",
  "main": "app.js",
  "scripts": {
    "build": "NODE_ENV=production run-p build:*",
    "build:css": "tailwindcss -i bundle/main.pcss -o public/_compiled/main.bundle.css",
    "build:js": "esbuild bundle/main.js --bundle --minify --outfile=public/_compiled/main.bundle.js",
    "dev": "NODE_ENV=development npm-run-all -p dev:*",
    "dev:fastify": "fastify start -w -l info -P app.js",
    "dev:proxy": "browser-sync start -c bs.config.js",
    "dev:css": "tailwindcss -i bundle/main.pcss -o public/_compiled/main.bundle.css --watch",
    "dev:js": "esbuild bundle/main.js --bundle --watch --outfile=public/_compiled/main.bundle.js",
    "gen:key": "secure-session-gen-key > secret-key",
    "start": "npm run gen:key && NODE_ENV=production fastify start -l info app.js",
    "test": "tap tests/**/*.test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.6.0",
    "fastify": "^3.15.1",
    "fastify-autoload": "^3.7.1",
    "fastify-cli": "^2.11.0",
    "fastify-formbody": "^5.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-secure-session": "^2.3.1",
    "fastify-static": "^4.0.1",
    "htmx.org": "^1.4.1",
    "mongoose": "^5.12.9",
    "point-of-view": "^4.14.0",
    "twig": "^1.15.4",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "esbuild": "^0.12.8",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.0-canary.14",
    "tailwindcss-debug-screens": "^2.0.0",
    "tap": "^15.0.9"
  }
}
